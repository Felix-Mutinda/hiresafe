
<div class="wrapper">
    <div class="sidebar" data-color="blue" data-image='sidebar-5.jpg' >

    <!--

        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
        Tip 2: you can also add an image using data-image tag

    -->

    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.hiresafe.com" class="simple-text">
                    <%= image_tag "nice-car.jpg", class: "car-logo1" %>
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href= <%= root_path %> >
                        <i class="fa fa-car"></i>
                        <p>Dashboard</p>
                    </a>
                </li>

				<li>
                    <a href="#" >
                        <i class="fa fa-key"></i>
                        <p>Hired Cars</p>
                    </a>
                </li>
                
                <li>
                    <a href=<%= edit_user_registration_path%> >
                        <i class="fa fa-user"></i>
                        <p>Profile</p>
                    </a>
                </li>

            </ul>
    	</div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header hiresafe-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href=<%= edit_user_registration_path%> ><%= current_user.fname %></a>
                   
                </div>
                <div class="collapse navbar-collapse">
             
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                           <a href=<%= destroy_user_session_path %> data-method="delete" >
                               Sign Out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


       <div class="content">
            <div class="container-fluid">
                <div class="row">
					<div class="col-md-6">
						<div class="card">
							<div class="header">
                                <h4 class="title">Your Currently Hired Cars</h4>
                            </div>
                            <div class="content">
                                <% if @car_details.any? %>
									<% @car_details.each do |car| %>
										<div class="row">
											<div class="col-md-4">
												<i class="fa fa-car fa-5x" style="color:#434371;"></i>
											</div>

											<div class="col-md-8">
												<strong>Model: </strong><em> <%= 
																				case car[0].model.to_i
																					when 1
																						"Sedan"
																					when 2
																						"Hatchback"
																					when 3
																						"SUV"
																					when 4
																						"Van"
																					when 5
																						"Station Wagon"
																					else
																						"Unspecified"
																				end %></em><br>
												<strong>Seats: </strong><em> <%= car[0].seats %></em><br>
												<strong>Transmission: </strong><em> <%= case car[0].transmission.to_i
																							when 1
																								"Automatic"
																							when 2
																								"Manual"
																							else
																								"Unspecified"
																						end  %></em><br>
												<strong>Car Insurance Number: </strong><em> <%= car[0].insurance_no %></em><br>
												<strong>Car Registration Number: </strong><em> <%= car[0].reg_no %></em><br>
												<strong>Pick-Up Location: </strong><em> <%= car[0].location %></em><br>
												<strong>Price: </strong><em> <%= car[0].price %> per day</em><br>
												<% if car[1].payment == "pending" %>
												<strong>Payment: </strong><em class="text-danger"> <%= car[1].payment %></em><br>
												<% else %>
												<strong>Payment: </strong><em class="text-success"> <%= car[1].payment %></em><br>
												<strong>Mpesa Receipt: </strong><em class="text-success"> <%= car[1].MpesaReceiptNumber %></em><br>
												<% end %>
											</div>
										</div>
										<%= link_to "Return Car", [car[0],car[1]], class: "btn btn-danger btn-fill pull-right" %>
										<div class="clearfix"></div>
										<hr>
										<div class="lnm">
										  <% if car[1].payment.  == "pending" %>
										    <%= image_tag "lnm-logo.png", class: "lnm-logo" %>
										    <button class="btn  btn-fill btn-success" id="lnm-initiate">Click to pay 
										        <%=
										          (car[1].end_date.day - car[1].start_date.day) * car[0].price
										        %>  
										    </button>
										    
										    <fieldset>
										        <legend>Alternatively</legend>
										        <ul class="list-group">
										            <li class="list-group-item">Go to M-PESA Menu</li>
										            <li class="list-group-item">Select Lipa na M-PESA</li>
										            <li class="list-group-item">Select Pay Bill</li>
										            <li class="list-group-item">Enter 123456 as the Business Number</li>
										            <li class="list-group-item">Enter ridekali as ACCOUNT NUMBER</li>
										            <li class="list-group-item">Enter amount </li>
										            <li class="list-group-item">Enter your M-PESA PIN and send</li>
										            <li class="list-group-item">You will receive an SMS confirming the transaction </li>
										        </ul>
										    </fieldset>
										 <% else %>
										     <button class="btn btn-fill btn-info pull-right" id="lnm-print-receipt">
										         <i class="fa fa-print"></i>
										         Print Receipt
										     </button>
										     <div class="clearfix"></div>
										 <% end %>
										</div>
									<% end %>
								<% else %>
									You Haven't Hired a Car Yet!
									<i class="far fa-frown"></i>
									<i class="far fa-frown"></i>
								<% end %>
                            </div>
						</div>
					</div>
					
						<div class="col-md-6">
							<div class="card card-glance">
								<div class="header">
									<h4 class="title">At a glance</h4>
								</div>
								<div class="content">
								   <div class="row">
										<div class="col-md-4">
											<i class="fa fa-users"></i>
											<em><strong><%= User.all.count %></strong> Users</em>
										</div>
										
										<div class="col-md-4">
											<i class="fa fa-car"></i>
											<em><strong><%= Car.all.count %></strong> Cars</em>
										</div>
										
										<div class="col-md-4">
											<i class="fa fa-road"></i>
											<em><strong><%= HiredCar.all.count %></strong> Currently Hired Cars</em>
										</div>
										
								   </div>
								   <div class="footer">
										<hr>
										<div class="row">
											<div class="col-md-6">
												<em>We have a 5 star rating.</em>
											</div>
											<div class="col-md-6 gold-color">
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
												<i class="fa fa-star"></i>
											</div>
										</div>
								   </div>
								</div>
							</div>
						</div>
					</div>
                </div>
            </div>




        <footer class="footer">
            <div class="container-fluid">
                <div class="pull-left">
                    <strong>Contact Us:</strong> <br>
						<i class="fa fa-phone-square"></i> +2547000000001 <br>
						<i class="fa fa-inbox"></i>  hiresafe@gmail.com <br>
                </div>
                <p class="copyright pull-right">
                    &copy; 2019 <a href="http://www.hiresafe.com">Hire Safe</a>, Just hire, no worries
                </p>
            </div>
        </footer>

    </div>
</div>
