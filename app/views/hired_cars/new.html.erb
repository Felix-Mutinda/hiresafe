
<div class="wrapper">
    <div class="sidebar" data-color="blue" data-image='sidebar-5.jpg' >

    <!--

        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
        Tip 2: you can also add an image using data-image tag

    -->

    	<div class="sidebar-wrapper">
            <div class="logo">
                <a href="http://www.hiresafe.com" class="simple-text">
                    <%= image_tag "nice-car.jpg", class: "car-logo" %>
                </a>
            </div>

            <ul class="nav">
                <li class="active">
                    <a href= <%= root_path %> >
                        <i class="fa fa-car"></i>
                        <p>Dashboard</p>
                    </a>
                </li>

                <li>
                    <a href=<%= edit_user_registration_path%> >
                        <i class="fa fa-user"></i>
                        <p>Profile</p>
                    </a>
                </li>

            </ul>
    	</div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header hiresafe-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href=<%= edit_user_registration_path%> ><%= current_user.name %></a>
                   
                </div>
                <div class="collapse navbar-collapse">
             
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                           <a href=<%= destroy_user_session_path %> data-method="delete" >
                               Sign Out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


       <div class="content">
            <div class="container-fluid">
                <div class="row">
					<div class="col-md-8">
						<div class="card">
							<div class="header">
                                <h4 class="title">Best Deal Ever!</h4>
                            </div>
                            <div class="content">
								<div class="row">
									<div class="col-md-4">
										<i class="fa fa-car fa-5x" style="color:#434371;"></i>
									</div>

									<div class="col-md-8">
										<strong>Model: </strong><em> <%= @car.model %></em><br>
										<strong>Transmission: </strong><em> <%= @car.transmission %></em><br>
										<strong>Pick-Up Location: </strong><em> <%= @car.location %></em><br>
										<strong>Price: </strong><em> <%= @car.price %> per day</em><br>
										
										<%= form_with(model: [@car, @car.hired_cars.build ], local: true) do |form| %>
											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														
														<strong class="text-info">Days to Hire:</strong>
														<%= form.number_field :days, class: "form-control", required: "required", min: 1 %>
													</div>
												</div>
											</div>
											
											<%= form.submit "Hire", class: "btn btn-primary btn-fill pull-right" %>
											<div class="clearfix"></div>
										<% end %>
									</div>
								</div>
								
                            </div>
						</div>
					</div>
					
						
					</div>
                </div>
            </div>




        <footer class="footer">
            <div class="container-fluid">
                <div class="pull-left">
                    <strong>Contact Us:</strong> <br>
						<i class="fa fa-phone-square"></i> +2547000000001 <br>
						<i class="fa fa-inbox"></i>  hiresafe@gmail.com <br>
                </div>
                <p class="copyright pull-right">
                    &copy; 2019 <a href="http://www.hiresafe.com">Hire Safe</a>, Just hire, no worries
                </p>
            </div>
        </footer>

    </div>
</div>
